<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="13" author="amiri">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tbl_upgrade_degree_seniority"/>
            </not>
        </preConditions>
        <createTable tableName="tbl_upgrade_degree_seniority">
            <column name="upgrade_degree_seniority_id" type="UNIQUEIDENTIFIER">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="upgrade_degree_seniority_from_degree" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="upgrade_degree_seniority_to_degree" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="upgrade_degree_seniority_is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="upgrade_degree_seniority_max_amount" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="upgrade_degree_seniority_creation_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
