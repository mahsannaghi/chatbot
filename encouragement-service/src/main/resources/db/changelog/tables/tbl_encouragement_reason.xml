<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="5" author="amiri">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tbl_attachment"/>
            </not>
        </preConditions>
        <createTable tableName="tbl_encouragement_reason">
            <column name="encouragement_reason_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="encouragement_reason_title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="encouragement_reason_is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
